[user]
	name = Shiori Hironaka
	email = noahluces@gmail.com
[color]
	ui = auto
[core]
	editor = vim
	quotepath = false
	autocrlf = false
	fileMode = false
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	sw = switch
	ldiff = difftool -y -t latex
[push]
	default = simple
[fetch]
	prune = true
[bash]
	showDirtyState = true
[difftool.latex]
	cmd = latexdiff -e utf8 -t INVISIBLE -s COLOR "$LOCAL" "$REMOTE"
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
